<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FakeChatApp"
        tools:targetApi="31">
        <activity
            android:name=".activities.call.videoplay.VideoPlayActivity"
            android:exported="false" />
        <activity
            android:name=".activities.viewimage.ImageViewActivity"
            android:exported="false" />
        <activity
            android:name=".activities.userprofile.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.about.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".activities.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.settings.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.call.details.CallDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.archive.ArchiveActivity"
            android:exported="false" />
        <activity
            android:name=".activities.call.video.VideoCallActivity"
            android:exported="false" />
        <activity
            android:name=".activities.viewstatus.ViewStatusActivity"
            android:exported="false" />
        <activity
            android:name=".activities.add_status.AddStatusActivity"
            android:exported="false" />
        <activity
            android:name=".activities.call.audio.CallActivity"
            android:exported="false" />
        <activity
            android:name=".activities.chat_screen.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.adduser.AddUserActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>